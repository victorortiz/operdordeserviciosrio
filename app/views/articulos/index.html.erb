<h1>Listado de sugerencias</h1>

<div class="row">
<div class="large-12 columns">
<p>
<%= form_tag({:controller => "articulos", :action => "index"}, :method => "get") %> 

<%= text_field_tag :search, params[:search] %>

<%= submit_tag 'Busqueda sugerencias', :name => nil %>

<% @busqueda.each do |s| %>

  <p><%= s.titulo %></p>

<% end %>

<p>
<table>
  <tr>
    <th>Titulo</th>
    <th>Descripción</th>
    <th>Número de Comentario</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @articulos.each do |articulo| %>
  <tr>
    <td><%= articulo.titulo %></td>
    <td><%= articulo.cuerpo %></td>
    <td><%= articulo.comentarios.size %></td>
    <td><%= link_to 'Show', articulo %></td>
    <td><%= link_to 'Edit', edit_articulo_path(articulo) %></td>
   <td><%= link_to 'Destroy', articulo, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
</div>
</div>
<%= link_to 'Nueva sugerencia', new_articulo_path %>
